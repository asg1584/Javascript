
let thisArray = ['sage', 'rosemary', 'parsley', 'thyme'];

let thatArray = ['basil', 'cilantro', ...thisArray, 'coriander'];

console.log("Combined Array with Spread Operator :"+ thatArray)


let extraNumbers= [5, 6, 7, 8];
let numbersWithLack =[1, 2, 3, 4, ... extraNumbers, 9];


console.log(numbersWithLack);

//indexOf

// When we use this method, it gives us index of element in array.
//If there is no element in this array, it gives us -1. 

function quickCheck(arr, elem) {
    if (arr.indexOf(elem) >= 0) {
      return true;
    }
    return false;
  }
  console.log(quickCheck(["squash", "onions", "shallots"], "mushrooms"));
